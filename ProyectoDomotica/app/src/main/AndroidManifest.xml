<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.untref.lp4.proyectodomotica">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PortadaActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HabitacionesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RegistroActivity"
            android:label="@string/title_activity_registro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ArtefactosActivity"
            android:label="@string/title_activity_artefactos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ConfiguracionActivity"
            android:label="@string/title_activity_configuracion"
            android:screenOrientation="portrait" />

        <service
            android:name=".services.Temporizador"
            android:exported="false" />

    </application>

</manifest>
